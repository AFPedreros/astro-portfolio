---
import Layout from "@layouts/Layout.astro";
import HeroSection from "@components/HeroSection.astro";
import AboutSection from "@components/AboutSection.astro";
import ExperienceSection from "@components/ExperienceSection.astro";
import SkillsSection from "@components/SkillsSection.astro";
import ProjectsSection from "@components/ProjectsSection.astro";
---

<Layout title="Felipe Pedreros | Full Stack Developer.">
  <main class="container w-full">
    <HeroSection />
    <div id="experience" class="-mt-16 pt-8 md:pt-4 lg:pt-0 lg:-mt-24">
      <ExperienceSection />
    </div>
    <div id="projects" class="-mt-8 pt-8 md:pt-4 lg:pt-0 lg:-mt-12">
      <ProjectsSection />
    </div>
    <div id="skills" class="-mt-8 pt-8 md:pt-4 lg:pt-0 lg:-mt-12">
      <SkillsSection />
    </div>
    <AboutSection />
  </main>
</Layout>
