---
import { Icons } from '@/components/Icons';
---

<section class="mx-auto flex max-w-3xl items-center justify-between pt-8 md:pt-12 lg:pt-24">
	<div class="flex w-full flex-col gap-y-4">
		<h2 class="border-b border-primary pb-2 text-2xl font-bold sm:text-3xl md:text-4xl lg:text-5xl">
			Skills
		</h2>
		<article class="grid grid-cols-2 pb-4 md:pb-8">
			<h3 class="text-lg lg:text-xl">CMS</h3>
			<div class="grid md:grid-cols-3">
				<span class="flex items-center gap-x-2">
					<Icons.payload className="h-[18px] w-[18px] shrink-0" />
					Payload
				</span>
			</div>
		</article>
		<article class="grid grid-cols-2 border-t border-primary pb-4 pt-2 md:pb-8">
			<h3 class="text-lg lg:text-xl">Frameworks</h3>
			<div class="grid gap-2 md:grid-cols-3">
				<span class="flex items-center gap-x-2">
					<Icons.nextJS className="h-[18px] w-[18px] shrink-0" />
					Next.js
				</span>
				<span class="flex items-center gap-x-2">
					<Icons.astro className="h-[18px] w-[18px] shrink-0" />
					Astro
				</span>
				<span class="flex items-center gap-x-2">
					<Icons.nestJS className="h-[18px] w-[18px] shrink-0" />
					NestJS
				</span>
			</div>
		</article>
		<article class="grid grid-cols-2 border-t border-primary pb-4 pt-2 md:pb-8">
			<h3 class="text-lg lg:text-xl">Libraries</h3>
			<div class="grid gap-2 md:grid-cols-3">
				<span class="flex items-center gap-x-2">
					<Icons.react className="h-[18px] w-[18px] shrink-0" />
					React
				</span>
			</div>
		</article>
		<article class="grid grid-cols-2 border-t border-primary pb-4 pt-2 md:pb-8">
			<h3 class="text-lg lg:text-xl">Languages</h3>
			<div class="grid gap-2 md:grid-cols-3">
				<span class="flex items-center gap-x-2">
					<Icons.typeScript className="h-[18px] w-[18px] shrink-0" />
					TypeScript
				</span>
				<span class="flex items-center gap-x-2">
					<Icons.javaScript className="h-[18px] w-[18px] shrink-0" />
					JavaScript
				</span>
				<span class="flex items-center gap-x-2">
					<Icons.solidity className="h-[18px] w-[18px] shrink-0" />
					Solidity
				</span>
			</div>
		</article>
		<article class="grid grid-cols-2 border-t border-primary pt-2">
			<h3 class="text-lg lg:text-xl">Design</h3>
			<div class="grid gap-2 md:grid-cols-3">
				<span class="flex items-center gap-x-2">
					<Icons.figma className="h-[18px] w-[18px] shrink-0" />
					Figma
				</span>
			</div>
		</article>
	</div>
</section>
