---
import ProjectCard from "@/components/ProjectCard.astro";
---

<section
  class="mx-auto flex max-w-3xl items-center justify-between pt-8 md:pt-12 lg:pt-24"
>
  <div class="flex w-full flex-col gap-y-4">
    <h2
      class="border-b border-primary pb-2 text-2xl font-bold sm:text-3xl md:text-4xl lg:text-5xl"
    >
      Projects
    </h2>
    <div class="grid gap-4 sm:grid-cols-2">
      <ProjectCard
        title="Shambala landing page"
        description="A platform to build and grow your online business."
        image="https://porfolio.dev/projects/svgl.webp"
        tags={["Next.js", "Tailwind CSS"]}
        gitHubUrl="https://github.com/AFPedreros/enterprise"
        siteUrl="https://empresas.shambala.life"
      />
    </div>
  </div>
</section>
