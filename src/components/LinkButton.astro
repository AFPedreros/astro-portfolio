---
import { Icons } from '@/components/Icons';
type Props = {
	url: string;
};
const { url } = Astro.props;
---

<a
	href={url}
	class="group/item justify-center text-primary transition-all duration-300 ease-in-out"
	target="_blank"
>
	<span
		class="inline-flex items-center gap-x-1 bg-gradient-to-r from-primary to-primary bg-[length:0%_2px] bg-left-bottom bg-no-repeat transition-all duration-300 ease-out group-hover/item:bg-[length:100%_2px]"
	>
		<slot />
		<Icons.arrowUpRight
			className="h-4 w-4 transition-all duration-300 group-hover/item:-translate-y-0.5 group-hover/item:translate-x-0.5"
		/>
	</span>
</a>
