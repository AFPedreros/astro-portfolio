---
import { Icons } from "@/components/Icons";
type Props = {
  url: string;
};
const { url } = Astro.props;
---

<a
  href={url}
  class="inline-flex group/item justify-center items-center gap-x-1 py-1 md:py-2 text-xs md:text-base hover:underline hover:underline-offset-2"
  target="_blank"
>
  <slot />
  <Icons.arrowUpRight
    className="h-4 w-4 group-hover/item:animate-jump group-hover/item:animate-duration-1000"
  />
</a>
