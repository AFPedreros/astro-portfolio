---
import Badge from "@/components/Badge.astro";

type Props = {
  title: string;
  description: string;
  image: string;
  tags: string[];
  url: string;
};

const { title, description, image, tags, url } = Astro.props;
---

<article
  class="group flex cursor-pointer flex-col rounded-lg border border-border p-2 transition duration-1000"
>
  <h3 class="text-lg font-semibold lg:text-xl">{title}</h3>
  <p class="text-sm text-secondary">
    {description}
  </p>
  <div class="mt-2 flex flex-wrap gap-1">
    {tags.map((tag) => <Badge text={tag} />)}
  </div>
  <div
    class="relative mt-2 aspect-auto h-48 overflow-hidden rounded-md sm:aspect-video"
  >
    <div
      class="transition-scale -z-10
           h-full bg-cover
          bg-center bg-no-repeat duration-500 ease-in-out group-hover:scale-110"
      style={`background-image: url('${image}')`}
    >
    </div>
  </div>
</article>
